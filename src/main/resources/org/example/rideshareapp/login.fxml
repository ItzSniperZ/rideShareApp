<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.rideshareapp.LoginController"
      alignment="CENTER"
      spacing="14">

    <!-- proper padding -->
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="Welcome to RideNow" style="-fx-font-size: 26;" />

    <TextField fx:id="usernameField" promptText="Username" maxWidth="220"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="220"/>

    <Button text="Login" onAction="#onLogin" maxWidth="220"/>
    <Label fx:id="statusLabel" textFill="red"/>

</VBox>
