<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.rideshareapp.MapController"
      spacing="10">

    <Label text="Map (Placeholder)" style="-fx-font-size: 22;"/>
    <Label text="Embed WebView / map widget here later." wrapText="true"/>

    <TextField fx:id="addressField" promptText="New address"/>
    <TextField fx:id="labelField" promptText="Label (Home, Work, etc.)"/>
    <Button text="Add Location" onAction="#onAddLocation"/>

    <Label fx:id="statusLabel"/>

</VBox>
