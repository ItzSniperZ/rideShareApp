<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.rideshareapp.controllers.ProfileController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 22;" text="Profile" />

    <TextField fx:id="usernameField" promptText="New username" />
    <PasswordField fx:id="passwordField" promptText="New password" />
    <TextField fx:id="classificationField" promptText="New Classification" />

    <HBox spacing="10">
        <Button onAction="#onUpdateProfile" text="Update Profile" />
        <Button onAction="#onContactSupport" text="Contact Support" />
    </HBox>

    <!-- Payment (fixed padding) -->
    <TitledPane expanded="false" text="Payment Methods">
        <content>
            <VBox spacing="8">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>

                <TextField fx:id="cardField" promptText="Card # (16 digits)" />
                <TextField fx:id="cvvField" promptText="CVV (3 digits)" />
                <TextField fx:id="expField" promptText="Exp (MM/yy)" />
                <Button onAction="#onAddPayment" text="Add Payment" />
                <Label fx:id="paymentStatus" />
            </VBox>
        </content>
    </TitledPane>

    <Label fx:id="statusLabel" />

</VBox>
