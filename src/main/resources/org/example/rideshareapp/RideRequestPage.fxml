<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.rideshareapp.controllers.RideRequestController"
      spacing="12">

    <Label text="Request a Ride" style="-fx-font-size: 22;"/>

    <Label text="Current Location:"/>
    <ComboBox fx:id="currentLocationBox"/>

    <Label text="Destination:"/>
    <ComboBox fx:id="destinationBox"/>

    <Label text="Price per mile:"/>
    <TextField fx:id="pricePerMileField" text="3.50"/>

    <Button text="Calculate Cost" onAction="#onCalculate"/>

    <Label fx:id="distanceLabel" text="Distance: --"/>
    <Label fx:id="costLabel" text="Cost: --"/>

    <Button fx:id="requestRideBtn" text="Request Ride" onAction="#onRequestRide" disable="true"/>

    <Label fx:id="statusLabel" />

</VBox>
